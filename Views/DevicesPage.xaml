<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Hestia_Maui.ViewModels"
    xmlns:templates="clr-namespace:Hestia_Maui.Views.Templates"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Hestia_Maui.Views.DevicesPage"
    x:DataType="vm:DevicesViewModel"
    x:Name="Page">

    <StackLayout>
    <!-- Displays each device in the Devices collection using the DeviceTemplate -->
    <ListView ItemsSource="{Binding ActiveDevices}" SelectedItem="{Binding SelectedDevice}" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <templates:DeviceTemplate/>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    <!-- Tooltip Label: visible only if there's text, with background color -->
    <Label Text="{Binding TooltipText}" 
           IsVisible="{Binding IsTooltipVisible}"
           HorizontalTextAlignment="Center"        
           HorizontalOptions="FillAndExpand" 
           VerticalOptions="Center" 
           Margin="10"
           BackgroundColor="{Binding TooltipBackgroundColor}" />
        
    </StackLayout>
</ContentPage>
