<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Hestia_Maui.ViewModels"
			 x:Class="Hestia_Maui.Views.AddDevicePage"
			 x:DataType="vm:AddDeviceViewModel">

    <ContentPage.Content>

            <!-- Title -->
            <Label Grid.Row="0"
                   Text="{Binding PageText}"
                   FontSize="26"
                   FontAttributes="Bold"
                   Margin="0,0,0,20" />

            <!-- Entries -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="2">

                <Label Text="{Binding EntryIdHeador}" 
                       FontSize="14" />
                
                <Entry Text="{Binding IdText, Mode=TwoWay}"
                       Placeholder="{Binding IdPlaceholder}" />

                <Label Text="{Binding EntryNameHeador}" 
                       FontSize="14" 
                       Margin="0,20,0,0"/>
                
                <Entry Text="{Binding NameText, Mode=TwoWay}"
                       Placeholder="{Binding NamePlaceholder}" />
                
            </VerticalStackLayout>

            <!-- Map -->
            <maps:Map x:Name="HestiaMaps"
                      Grid.Row="2"
                      IsShowingUser="True"
                      VerticalOptions="FillAndExpand"
                      HorizontalOptions="FillAndExpand" 
                      Margin="0,20,0,20"/>

            <!-- Buttons -->
            <HorizontalStackLayout Grid.Row="3"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Spacing="20">

                <Button Text="{Binding BtnCancelText}"
                        Command="{Binding CancelPressedCommand}"
                        BackgroundColor="#f67d22"
                        WidthRequest="80" 
                        HeightRequest="50"/>

                <Button Text="{Binding BtnOkText}"
                        Command="{Binding OkPressedCommand}"
                        BackgroundColor="#f67d22"
                        WidthRequest="80" 
                        HeightRequest="50"/>

            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="{Binding BtnCancelText}" Command="{Binding CancelPressedCommand}" Margin="0,0,20,0" BackgroundColor="#F26C0E"
                        WidthRequest="80" HeightRequest="50"/>
                <Button Text="{Binding BtnOkText}" Command="{Binding OkPressedCommand}" BackgroundColor="#F26C0E" 
                        WidthRequest="80" HeightRequest="50"/>
            </HorizontalStackLayout>

        </Grid>
    </ContentPage.Content>
    
</ContentPage>
